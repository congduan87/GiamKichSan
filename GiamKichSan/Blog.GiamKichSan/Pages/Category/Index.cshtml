@page
@model Blog.GiamKichSan.Pages.Category.IndexModel
<form class="panel panel-primary" method="get">
    <div class="panel-heading"></div>
    <div class="panel-body">
        <div class="row form-group">
            <div class="col-md-6 col-sm-6">
                <input type="tel" class="form-control" name="term" value="" placeholder="Tra cứu">
            </div>
            <div class="col-md-2 col-sm-3">
                <button type="submit" class="btn btn-primary mb-2">Tìm kiếm</button>
            </div>
            <div class="col-md-2 col-sm-3">
                <a href="/Category/Update" class="btn btn-info mb-2">Thêm mới</a>
            </div>
        </div>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr style="background-color: #104e8b; color: #e49b0f; text-align:center">
                <th style="width:50px">STT</th>
                <th style="width:50px">ID</th>
                <th style="width:500px">Tên danh mục</th>
                <th style="width:100px"></th>
            </tr>
        </thead>
        <tbody>
            @{ var index = 0;}
            @foreach (var item in Model.categoriesEntity)
            {
                <tr>
                    @{ index++;}
                    <td>@index</td>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="\Category\Update?ID=@item.ID">Chỉnh sửa</a>
                        <a href="\Category\Delete?ID=@item.ID">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>