@page
@model Blog.GiamKichSan.Pages.Category.UpdateModel
<div class="container">
    <h2>@ViewData["Title"] - Danh mục</h2>
    <div class="panel-group">
        <form class="panel panel-default" enctype="multipart/form-data" method="post">
            <div class="panel-body">
                <div class="form-group">
                    <label for="alias">ID:</label>
                    <input type="text" class="form-control" name="id" value="@Model.categoryEntity.ID" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="alias">Cấp cha:</label>
                    <select name="idParent" class="form-control">
                        <option value="0">-- Chọn --</option>
                        @foreach (var item in Model.parentcategoryEntity)
                        {
                            if (item.ID != Model.categoryEntity.IDParent)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                            else
                            {
                                <option selected value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Tên danh mục:</label><span class="text-danger">*</span>
                    <input type="text" class="form-control" name="name" value="@Model.categoryEntity.Name" maxlength="500" autocomplete="off" required>
                </div>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </div>
        </form>
    </div>
</div>